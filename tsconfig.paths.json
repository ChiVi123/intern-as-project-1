{
    "compilerOptions": {
        "paths": {
            "~config": ["./src/config"],
            "~config/*": ["./src/config/*"],

            "~components": ["./src/shared/components"],
            "~components/*": ["./src/shared/components/*"],

            "~helper": ["./src/shared/helper"],
            "~helper/*": ["./src/shared/helper/*"],

            "~hook": ["./src/shared/hook"],
            "~hook/*": ["./src/shared/hook/*"],

            "~icons": ["./src/shared/assets/icons"],
            "~icons/*": ["./src/shared/assets/icons/*"],

            "~layout": ["./src/layout"],
            "~layout/*": ["./src/layout/*"],

            "~modules": ["./src/modules"],
            "~modules/*": ["./src/modules/*"],

            "~routers": ["./src/routers"],
            "~routers/*": ["./src/routers/*"],

            "~styles/*": ["./src/view/styles/*"],

            "~view": ["./src/view"],
            "~view/*": ["./src/view/*"]
        }
    }
}
